@{
    ViewData["Title"] = "Reporte Excel";

    var hoy = DateTime.Today;
    var haceUnMes = hoy.AddMonths(-19);
    var mesActual = hoy.Month;
    var añoActual = hoy.Year;
    var mesAnterior = haceUnMes.Month;
    var añoAnterior = haceUnMes.Year;
}

@*se envia un modelo con un enum para establecer a que vista o a que reporte se ingresa
para activar asi el menu superior*@
<partial name="_SubMenu.cshtml" model="SubMenuTransacciones.Excel" />



<h1> Exportar transacciones a Excel</h1>

<div class="mb-3">
    <a asp-action="ExportarExcelPorMes" asp-route-mes="@mesActual" asp-route-año="@añoActual" class="btn btn-second">
        Exportar mes Actual
    </a> - @hoy.ToString("MMM yyyy")
</div>
    

<div class="mb-3">
    <a asp-action="ExportarExcelPorMes" asp-route-mes="@mesAnterior" asp-route-año="@añoActual" class="btn btn-second">
        Exportar mes Anterior
    </a> - @mesAnterior.ToString("MMM")
</div>

<div class="mb-3">
    <a asp-action="ExportarExcelPorMes" asp-route-mes="@mesActual" asp-route-año="@añoAnterior" class="btn btn-second">
        Hace un año
    </a> - @añoAnterior.ToString()
</div>

